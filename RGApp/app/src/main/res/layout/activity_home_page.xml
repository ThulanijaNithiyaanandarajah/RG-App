<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="false">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.rgapp.home_page"
    android:orientation="vertical">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/LinearLayout1">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/imageView2"
        android:src="@drawable/rg_logo_title_only"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/LinearLayout1"
    android:id="@+id/linearLayout2"
    android:weightSum="1">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_weight="1"
        android:hint="Type here to Search" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/button" />
</LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:id="@+id/linearLayout3"
    android:layout_below="@+id/linearLayout2"
    android:orientation="horizontal">

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:id="@+id/slide"
        tools:viewpager="@layout/activity_image_view"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"></android.support.v4.view.ViewPager>

</LinearLayout>

    <TextView

            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trending"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView1">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="345dp"
            android:layout_height="38dp"
            android:id="@+id/imageView4"
            android:src="@drawable/apple_air_2_64gb_tab"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop by catagory"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5"
        android:weightSum="1"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TV,APPLIENCES AND CAMERAS"
            android:id="@+id/textView3"
            android:layout_below="@+id/linearLayout5"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/Samsung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAMSUNG"
            android:background="#f7941e"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView3"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/LG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LG"
            android:background="#f7941e"
            android:textColor="#ffffff"
            android:layout_below="@+id/Samsung"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/haier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HAIER"
            android:background="#f7941e"
            android:textColor="#ffffff"
            android:layout_below="@+id/LG"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/sony"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SONY"
            android:background="#f7941e"
            android:textColor="#ffffff"
            android:layout_below="@+id/haier"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/innovex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INNOVEX"
            android:background="#f7941e"
            android:textColor="#ffffff"
            android:layout_below="@+id/sony"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayout5"
        android:id="@+id/linearLayout6"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOBILES AND TABLETS"
            android:id="@+id/textView4"
            android:layout_below="@+id/linearLayout6"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/tablets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TABLETS"
            android:background="#f7941e"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView4"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/mobilesandtablets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MOILES AND TABLETS"
            android:background="#f7941e"
            android:textColor="#ffffff"
            android:layout_below="@+id/tablets"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/mobileccessories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MOBILE ACCESSARIES"
            android:background="#f7941e"
            android:textColor="#ffffff"
            android:layout_below="@+id/mobilesandtablets"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/mobiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MOBILES"
            android:background="#f7941e"
            android:textColor="#ffffff"
            android:layout_below="@+id/mobileccessories"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/apple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="APPLE"
            android:background="#f7941e"
            android:textColor="#ffffff"
            android:layout_below="@+id/mobiles"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
    <LinearLayout
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout7"
    android:weightSum="1"
    android:layout_below="@+id/linearLayout6"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WOMEN'S FASHION"
        android:id="@+id/textView5"
        android:layout_below="@+id/linearLayout7"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="345dp"
        android:layout_height="38dp"
        android:id="@+id/imageView5"
        android:src="@drawable/apple_air_2_64gb_tab"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout8"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ETHNIC WEAR"
            android:id="@+id/textView6"
            android:layout_below="@+id/linearLayout8"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="345dp"
            android:layout_height="38dp"
            android:id="@+id/imageView5"
            android:src="@drawable/apple_air_2_64gb_tab"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout9"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEN'S FASHION"
            android:id="@+id/textView7"
            android:layout_below="@+id/linearLayout9"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="345dp"
            android:layout_height="38dp"
            android:id="@+id/imageView6"
            android:src="@drawable/apple_air_2_64gb_tab"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayout9"
        android:id="@+id/linearLayout10"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOME AND LIVING"
            android:id="@+id/textView8"
            android:layout_below="@+id/linearLayout10"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/snugglebug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SNUGGLE BUG"
            android:background="#f7941e"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView8"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/homedeccor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOME DECCOR"
            android:background="#f7941e"
            android:textColor="#ffffff"
            android:layout_below="@+id/snugglebug"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/homeandliving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOME AND LIVING"
            android:background="#f7941e"
            android:textColor="#ffffff"
            android:layout_below="@+id/homedeccor"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/lampsandlightning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LAMPS AND LIGHTNING"
            android:background="#f7941e"
            android:textColor="#ffffff"
            android:layout_below="@+id/homeandliving"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/furniture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FURNITURE"
            android:background="#f7941e"
            android:textColor="#ffffff"
            android:layout_below="@+id/lampsandlightning"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="VIEW ALL"
        android:id="@+id/textView9"
        android:shadowColor="#fcbe03"
        android:textColor="#fca904"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignRight="@+id/linearLayout4"
        android:layout_alignEnd="@+id/linearLayout4" />
</RelativeLayout>
</ScrollView>


